<div class="content-section reviews-section" data-section-type="content">
  <h3>{{ section.settings.title }}</h3>
  {% for block in section.blocks %}
    <div class="review">
      <p>
        {% for i in (1..5) %}
          {% if i <= block.settings.rating %}
            ★
          {% else %}
            ☆
          {% endif %}
        {% endfor %}
        "{{ block.settings.review_text }}" - {{ block.settings.author }}
      </p>
    </div>
  {% endfor %}
</div>

{% schema %}
{
  "name": "Product Reviews",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "Customer Reviews"
    }
  ],
  "blocks": [
    {
      "type": "review",
      "name": "Review",
      "settings": [
        {
          "type": "range",
          "id": "rating",
          "label": "Rating",
          "min": 1,
          "max": 5,
          "step": 1,
          "default": 5
        },
        {
          "type": "text",
          "id": "review_text",
          "label": "Review Text",
          "default": "Amazing product!"
        },
        {
          "type": "text",
          "id": "author",
          "label": "Author",
          "default": "John D."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Product Reviews",
      "category": "Product",
      "blocks": [
        {
          "type": "review",
          "settings": {
            "rating": 5,
            "review_text": "Best snowboard I've ever used! Super smooth and durable.",
            "author": "Alex S."
          }
        },
        {
          "type": "review",
          "settings": {
            "rating": 4,
            "review_text": "Really good quality, but I wish it came in more colors.",
            "author": "Emma R."
          }
        },
        {
          "type": "review",
          "settings": {
            "rating": 5,
            "review_text": "Perfect for my snowboarding trips! Highly recommend.",
            "author": "Mike T."
          }
        }
      ]
    }
  ],
  "enabled_on": {
    "templates": ["product"]
  }
}
{% endschema %}
<div class="content-section safety-icons-section" data-section-type="content">
<div class="square-icon-grid">
  {% for i in (1..4) %}
    {% assign icon_key = "icon_" | append: i %}
    {% assign icon_alt_key = "icon_" | append: i | append: "_alt" %}
    {% assign text_key = "text_" | append: i %}
    {% assign image = section.settings[icon_key] %}
    {% assign alt_icon = section.settings[icon_alt_key] %}

    <div class="square-icon-item" >
      <div class="square-icon-box" style="background: {{ section.settings.stroke_item }}">
        <div class="square-icon-inner" style="background: {{ section.settings.background_item }}">
          {% if image != blank %}
            <img src="{{ image | img_url: '150x' }}" alt="Icon {{ i }}">
          {% elsif alt_icon contains 'material-icons' %}
            <span class="material-icons" style="color: {{ section.settings.icon_item }}">{{ alt_icon | remove: 'material-icons ' }}</span>
          {% elsif alt_icon != blank %}
            <i class="material-symbols-outlined" style="color: {{ section.settings.icon_item }}">{{ alt_icon }}</i>
          {% else %}
            <div class="placeholder-icon" style="color: {{ section.settings.icon_item }}"></div>
          {% endif %}
        </div>
      </div>
      {% if forloop.first %}
        <div class="square-icon-text square-icon-text-mob">
        <h4>{{ section.settings.text_title_mob }}</h4>
        <p>{{ section.settings.text_mob }}</p>
      </div>
      {% endif %}
      <div class="square-icon-text">
        {{ section.settings[text_key] | newline_to_br }}
      </div>
    </div>
  {% endfor %}
</div>
</div>

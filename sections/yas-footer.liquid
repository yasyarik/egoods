      "content": "General Settings"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color",
      "default": "transparent"
    },
    {
      "type": "select",
      "id": "font_variant",
      "label": "Font Family",
      "options": [
         { "value": "default", "label": "Default by theme" },
        { "value": "custom", "label": "Own choice" }

      "id": "padding_lr_mob",
      "label": "Horizontal Padding",
      "info": "for mobile",
      "min": 0,
      "max": 100,
      "step": 5,
      "default": 20
    },
       {
      "type": "range",
      "id": "padding_tb_mob",
      "label": "Vertical Padding",
      "info": "for mobile",   
      "min": 0,
      "max": 100,
      "default": 20
    },
    {
      "type": "color",
      "id": "text_color",
      "label": "Text Color",
      "default": "#000000"
    },
    {
      "type": "select",
      "id": "display_on",
      "label": "Display On",
      "options": [
        { "value": "all", "label": "All Devices" },
        { "value": "mobile_only", "label": "Mobile Only" },
        { "value": "desktop_only", "label": "Desktop Only" }
      ],
      "default": "all"
    }
  ],
  "blocks": [
    {
      "type": "link_list",
      "name": "Link Column",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Column Title"
        },
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        }
      ]
    }
  ],
  "max_blocks": 3,
 
}

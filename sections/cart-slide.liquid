                  </div>
                  <label class="product-addons__switch">
                    <input type="checkbox" class="product-addons__toggle">
                    <span class="product-addons__slider"></span>
                  </label>
                </div>
              </div>
          {% endif %}         
      </div>
           
    {% endcase %}
 
    {% endfor %}
    
  </div>

</cart-slide>
                    


<style>
{% if section.settings.font_variant == 'custom' %}
    {%- liquid
      assign body_font_bold = section.settings.title_font | font_modify: 'weight', 'bold'
      assign body_font_italic = section.settings.title_font | font_modify: 'style', 'italic'
      assign body_font_bold_italic = body_font_bold | font_modify: 'style', 'italic'
    %}
    {{ section.settings.title_font | font_face: font_display: 'swap' }}
    {{ body_font_bold | font_face: font_display: 'swap' }}
    {{ body_font_italic | font_face: font_display: 'swap' }}
    {{ body_font_bold_italic | font_face: font_display: 'swap' }}
    {{ settings.type_header_font | font_face: font_display: 'swap' }}
    #shopify-section-{{section.id}} * {
      font-family: {{ section.settings.title_font.family }};
    }
  {% endif %}
  /* Dynamic styles â€” unchanged */
#shopify-section-{{section.id}} .material-symbols-outlined {
  /* Icon variation settings */
  font-variation-settings:
    'FILL' 0,
    'wght' 400,
    'GRAD' 0,
    'opsz' 48;
  /* Icon size */
  font-size: 24px;
  /* Align with text vertically */
  vertical-align: middle;
}

#shopify-section-{{section.id}} {
  display: {% case section.settings.display_on %}
            {% when 'all' %} block;
            {% when 'mobile_only' %} none;
            {% when 'desktop_only' %} block;
          {% endcase %};
  background-color: {{ section.settings.background_color }};
  text-align: {{ section.settings.heading_align }};
  margin: 0 auto;
  position: relative;
  overflow: hidden;
  width: 100%;
}

#shopify-section-{{section.id}} .content-wrapper {
  margin: 0 auto;
  max-width: {% if section.settings.section_width == 'full' %}100%{% else %}{{ settings.page_width }}px{% endif %};
  padding: {{ section.settings.padding_y_desk }}px {{ section.settings.padding_x_desk }}px;
  position: relative;
  text-align: {{ section.settings.heading_align }};
}

#shopify-section-{{section.id}} .heading {
  max-width: 50%;
}

#shopify-section-{{section.id}} .title * {
  margin: 0;
}

#shopify-section-{{section.id}} .title h2,
#shopify-section-{{section.id}} .title h1,
#shopify-section-{{section.id}} .title h3,
#shopify-section-{{section.id}} .title p {
  font-size: {% case section.settings.heading_size %}
               {% when 'small' %}36px
               {% when 'medium' %}45px
               {% when 'large' %}60px
             {% endcase %};
  text-transform: {{ section.settings.headline_typography }};
  color: {{ section.settings.title_color }};
  margin: 0;
  text-align: {% case section.settings.heading_align %}
                {% when 'left' %}left;
                {% when 'center' %}center;
                {% when 'right' %}right;
              {% endcase %};
  line-height: 110%;
  font-weight: 700;
  margin-bottom: 40px;
}

#shopify-section-{{section.id}} .subtitle * {
  margin: 0;
}

#shopify-section-{{section.id}} .subtitle h2,
#shopify-section-{{section.id}} .subtitle h3,
#shopify-section-{{section.id}} .subtitle p {
  color: {{ section.settings.subtitle_color }};
  font-size: 20px;
  font-weight: 400;
  text-align: {% case section.settings.heading_align %}
                {% when 'left' %}left;
                {% when 'center' %}center;
                {% when 'right' %}right;
              {% endcase %};
  line-height: 150%;
  margin: 0;
  margin-bottom: 32px;
}

#shopify-section-{{section.id}} ul li {
  margin-bottom: 26.5px;
  display: flex;
  align-items: center;
  gap: 10px;
  width: 100%;
}

.tab-button {
  background: #fff;
  border: none;
  padding: 0 20px;
  margin: 0;
  cursor: pointer;
  font-size: 22px;
  font-weight: bold;
  color: {{ section.settings.tabs_text_color }};
  height: 91px;
  /* Center vertically */
  line-height: 91px;
  position: relative;
  flex: 1;
  text-align: center;
  border-bottom: 2px solid #ddd;
  display: flex;
  align-items: center;
  justify-content: center;
}

.tab-button.active {
  background: {{ section.settings.tabs_color }};
  color: {{ section.settings.tabs_texta_color }};
}

.tab-button.active::after {
  content: '';
  position: absolute;
  bottom: -10px;
  left: 50%;
  transform: translateX(-50%);
  width: 0;
  height: 0;
  border-left: 10px solid transparent;
  border-right: 10px solid transparent;
  border-top: 10px solid {{ section.settings.tabs_color }};
}

.tab-image img,
.tab-image .placeholder-image {
  width: 100%;
  height: 460px;
  background: #ccc;
  border-radius: {{ section.settings.image_round }}px;
  object-fit: cover;
}

.tab-text {
  padding-top: 40px;
  padding-bottom: 40px;
  padding-left: 80px;
  color: {{ section.settings.body_color }};
}

/* Mobile responsive dynamic styles */
@media (max-width: 768px) {
  #shopify-section-{{section.id}} {
    display: {% case section.settings.display_on %}
                {% when 'all' %}block;
                {% when 'mobile_only' %}block;
                {% when 'desktop_only' %}none;
              {% endcase %};
  }

  #shopify-section-{{section.id}} .content-wrapper {
    max-width: 100%;
    padding: {{ section.settings.padding_y_mob }}px {{ section.settings.padding_x_mob }}px;
  }

  #shopify-section-{{section.id}} .heading {
    width: 100%;
    max-width: 100%;
  }

  #shopify-section-{{section.id}} .title h2,
  #shopify-section-{{section.id}} .title h1,
  #shopify-section-{{section.id}} .title h3,
  #shopify-section-{{section.id}} .title p {
    font-size: {% case section.settings.heading_size %}
                 {% when 'small' %}20px
                 {% when 'medium' %}28px
                 {% when 'large' %}36px
               {% endcase %};
    line-height: 100%;
    margin: 0;
    margin-bottom: 24px;
  }

  #shopify-section-{{section.id}} .subtitle h2,
  #shopify-section-{{section.id}} .subtitle h3,
  #shopify-section-{{section.id}} .subtitle p {
    font-size: 14px;
    margin-bottom: 24px;
  }

  #shopify-section-{{section.id}} ul li {
    margin-bottom: 16px;
  }

  .tab-button.active::after {
    bottom: -8px;
    border-left: 8px solid transparent;
    border-right: 8px solid transparent;
    border-top: 8px solid {{ section.settings.tabs_color }};
  }
}

</style>


